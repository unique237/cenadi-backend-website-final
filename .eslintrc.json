{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "prefer-arrow-callback": "warn",
    "no-param-reassign": ["error", { "props": false }],
    "consistent-return": "warn",
    "max-len": ["warn", { "code": 100 }]
  },
  "ignorePatterns": [
    "node_modules/",
    "logs/",
    "coverage/",
    ".env"
  ]
}
